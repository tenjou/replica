{
	"name": "build-replica",
	"version": "0.1.31",
	"description": "Plug & play building tool for JavaScript.",
	"author": "Arturs Å efers <arthur.der.shefer@gmail.com>",
	"main": "replica.js",
	"dependencies": { 
		"uglify-js2" : "github:mishoo/UglifyJS2#harmony"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tenjou/replica"
	},
	"scripts": {
		"build": "npm run build:default & npm run build:uglify",
		"build:default": "build-replica --input src --concat build/meta2d.js",
		"build:uglify": "build-replica --input src --concat build/meta2d.min.js --uglify"
	},	
	"bin": {
		"build-replica": "./bin/replica"
	},
	"keywords": [
		"build",
		"include",
		"minify",
		"uglify",
		"index"
	],
	"preferGlobal": true,
	"license": "MIT"
}
